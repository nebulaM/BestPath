<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/theme_red_dark"/>
            <size
                android:width="@dimen/theme_dialog_circle"
                android:height="@dimen/theme_dialog_circle"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/theme_red_trans"/>
            <size
                android:width="@dimen/theme_dialog_circle"
                android:height="@dimen/theme_dialog_circle"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/theme_red"/>
            <size
                android:width="@dimen/theme_dialog_circle"
                android:height="@dimen/theme_dialog_circle"/>
        </shape>
    </item>
</selector>