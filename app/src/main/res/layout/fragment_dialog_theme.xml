<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="8"
    android:alpha="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/dialog_theme_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/padding_half"
            android:paddingLeft="@dimen/padding"
            android:gravity="left"
            android:background="#FFFFBB33"
            android:text="@string/theme"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:weightSum="4">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/dialog_theme_circle_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:paddingLeft="@dimen/padding_half"
                    android:paddingRight="@dimen/padding_half"
                    android:src="@drawable/circle_dark" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/dialog_theme_circle_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:paddingLeft="@dimen/padding_half"
                    android:paddingRight="@dimen/padding_half"
                    android:src="@drawable/circle_red"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/dialog_theme_circle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:paddingLeft="@dimen/padding_half"
                    android:paddingRight="@dimen/padding_half"
                    android:src="@drawable/circle_grey"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/dialog_theme_circle_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:paddingLeft="@dimen/padding_half"
                    android:paddingRight="@dimen/padding_half"
                    android:src="@drawable/circle_blue"
                    />
            </RelativeLayout>
       </LinearLayout>


</LinearLayout>